---
navLinks:
    Home: "/"
    Posts: "/posts/"
    Tags: "/tags/"
    About: "/about/"
---
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    {% set css %}
        {% include "css/normalize.css" %}
        {% include "css/skeleton.css" %}
        {% include "css/main.css" %}
        {% include "css/prism-material-dark.css" %}
    {% endset %}

    {% set js %}
        {% include "js/prettydate.js" %}
    {% endset %}

    <style>
        {{ css | cssmin | safe }}
    </style>

    <script>
        {{ js | safe }}
    </script>

    <!-- HTML -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/tonsky/FiraCode@5.2/distr/fira_code.css">

</head>


<body>
<div class="container" id="main" onload="">
    <header>
        <nav id="header-nav">
            {% for label, path in navLinks %}
                <a href="{{ path }}"
                    {% if page.url == path %}
                    aria-current="page"
                    {% endif %}>{{ label }}
                </a>
            {% endfor %}
        </nav>
    </header>
    <hr/>
    <main>
        {{ content | safe }}
    </main>
    <hr/>
    <footer>
        <address>
